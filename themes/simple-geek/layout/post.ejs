<%- partial('_partial/nav') %>
<div class="hd posts">
    <!-- <a href="/index.html"><i class="fa fa-reply replay-btn" aria-hidden="true"></i></a> -->
    <% if (page.layout !== 'page') { %>
        <div class="post-title">
            <p>
                <%= page.title %>
            </p>
            <hr>
        </div>
    <% } else { %>
        <br>
    <% } %>
    <div class="post-content">
        <%- page.content %>
    </div>
    <% if (page.comments) { %>
        <hr class="fhr">
        <div id="vcomments"></div>
    <% } %>
</div>